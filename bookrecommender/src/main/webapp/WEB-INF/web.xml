<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>BookResultServlet</servlet-name>
  	<display-name>BookResultServlet</display-name>
  	<description></description>
  	<servlet-class>bookrecommender.controller.BookResultServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TaskTimerServlet</servlet-name>
  	<display-name>TaskTimerServlet</display-name>
  	<description></description>
  	<servlet-class>bookrecommender.controller.TaskTimerServlet</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>BookResultServlet</servlet-name>
  	<url-pattern>/BookResultServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TaskTimerServlet</servlet-name>
  	<url-pattern>/TaskTimerServlet</url-pattern>
  </servlet-mapping>
